<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp75">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/mSwipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:clickToClose="true"
        app:drag_edge="right"
        app:show_mode="lay_down">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mIvEdit"
                android:layout_width="@dimen/dp100"
                android:layout_height="match_parent"
                android:background="@color/color_edit_background"
                android:padding="@dimen/dp28"
                android:src="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/mIvDelete"
                android:layout_width="@dimen/dp100"
                android:layout_height="match_parent"
                android:background="@color/color_delete_background"
                android:padding="@dimen/dp28"
                android:src="@drawable/ic_delete" />


        </LinearLayout>


        <FrameLayout
            android:id="@+id/mFlContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp15"
            android:paddingRight="@dimen/dp15">

            <TextView
                android:id="@+id/mTvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/dp15"
                tools:text="百度" />

            <TextView
                android:id="@+id/mTvLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp15"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="https://www.baidu.com" />
        </FrameLayout>


    </com.daimajia.swipe.SwipeLayout>


</FrameLayout>