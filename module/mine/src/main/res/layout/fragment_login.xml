<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp25"
        android:paddingEnd="@dimen/dp25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/mEtAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:background="@null"
                android:gravity="center"
                android:hint="Your Account"
                android:inputType="text"
                android:lines="1"
                android:textColor="@color/textNormal"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:background="@color/white" />


            <EditText
                android:id="@+id/mEtPwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:background="@null"
                android:gravity="center"
                android:hint="Your Password"
                android:inputType="textPassword"
                android:lines="1"
                android:textColor="@color/textNormal"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />


        </LinearLayout>


        <TextView
            android:id="@+id/mTvSignIn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginTop="@dimen/dp25"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp45"
            android:background="@color/color_sign_in"
            android:gravity="center"
            android:text="SIGN IN"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            android:textStyle="bold" />


    </LinearLayout>
</layout>