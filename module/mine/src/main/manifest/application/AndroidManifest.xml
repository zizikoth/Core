<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.module.mine">

    <application
        android:name="com.base.base.app.BaseApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/iTheme">
        <activity android:name=".ui.activity.square.UserSquareActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activity.square.SquareActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.todo.TodoEditActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity
            android:name=".ui.activity.todo.TodoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity
            android:name=".ui.activity.collection.web.CollectWebActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity
            android:name=".ui.activity.coin.RankActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.coin.CoinActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.collection.article.CollectArticleActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity
            android:name=".ui.activity.setting.SettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activity.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".launcher.MineLauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>